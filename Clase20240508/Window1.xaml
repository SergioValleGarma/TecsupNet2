<Window x:Class="Clase20240508.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clase20240508"
        mc:Ignorable="d"
        Title="Window1" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Button Height="50" Grid.Column="0" Grid.Row="0" Content="UNO" Background="Yellow" FontSize="20" />
        <Button Height="50" Grid.Column="0" Grid.Row="1" Content="DOS" Background="Green" FontSize="20" />
        <Button Height="50" Grid.Column="1" Grid.Row="0" Content="TRES" Background="red" FontSize="20" />
        <Button Height="50" Grid.Column="1" Grid.Row="1" Content="CUATRO" Background="blue" FontSize="20" />
        <Button Height="50" Grid.Column="2" Grid.Row="0" Content="CINCO" Background="Orange" FontSize="20" />
        <Button Height="50" Grid.Column="2" Grid.Row="1" Content="CINCO" Background="Pink" FontSize="20" />
    </Grid>
    
</Window>
